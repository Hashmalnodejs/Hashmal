extends ./template/base

block body
    div.container
        div.row.my-5
            div.col-12.col-lg-3
                div.img-produit
            div.col-12.col-lg-9
                h1 #{product.name}
                form(id="form_currency", action=`/product/${product.id}`, method='get')
                    include include/currency_form
                ul
                    - var concat = (+product.priceEur * +factor).toFixed(2)
                    li
                        a(href=`/product/${product.id}`)= `Produit : ${product.name}` + ` Prix: ${concat}`
                a(href='/ajout') ajout
