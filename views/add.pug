extends ./template/base

block body
    div.container
        
        a.mt-4.d-inline-block.text-primary(href='/products') < Liste des produits
    
        h1.text-center.my-5 Ajouter un produit

        if success == 'true'
            div.alert.alert-success.alert-dismissible.fade.show(role="alert")
                strong Succès !
                    span  Votre produit a bien été ajouté.
                button(type="button" class="close" data-dismiss="alert" aria-label="Close")
                    span(aria-hidden="true") &times;

        else if success == 'false'
            div.alert.alert-danger.alert-dismissible.fade.show(role="alert")
                strong Erreur !
                    span   dans votre formulaire. Veuillez réessayer.
                button(type="button" class="close" data-dismiss="alert" aria-label="Close")
                    span(aria-hidden="true") &times;

        form(method='post' action='/add')
            div.form-group
                label(for='name') Nom du produit :
                input.form-control(id="name" type='text', placeholder='Nom du produit...' name='name', required)
            div.form-group    
                label(for='priceEur') Prix du produit :
                input.form-control(id="priceEur" type='number' step='any', placeholder='Prix en euros...' name='priceEur', required)
            input.btn.btn-primary(type='submit' value="Ajouter un produit")
