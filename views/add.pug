extends ./template/base

block body
    h1 Page d'ajout'.

    form(method='post' action='/add')
        div.form-group
            label(for='name') Name:
                input#name.form-control(type='text', placeholder='Product name...' name='name', required)

        div.form-group
            label(for='priceEur') Price:
                input#priceEur.form-control(type='number' step='any', placeholder='Price in euros...' name='priceEur', required)

        input(type="submit") Add


    a(href='Products') Products